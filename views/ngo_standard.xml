                    <group>
                        <!-- <group col="4"> -->
                        <group string="تفاصيل الاستمارة">
                            <field name="file_no"/>
                            <field name="decision_id"/>
                            <field name="application_type_id"/>
                            <field name="residence_type_id"/>
                            <field name="application_date"/>
                            <field name="mohafaza"/>
                            <field name="kadaa"/>
                            <field name="city"/>
